<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:background="@color/green"
    android:padding="5dp"
    android:layout_gravity="center">
    <TextView
        android:layout_width="30dp"
        android:gravity="center_horizontal"
        android:id="@+id/closebtncv"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="X"
        android:textStyle="bold"
        android:layout_gravity="end"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <CalendarView
            android:id="@+id/datepickerdialog"
            android:layout_width="match_parent"
            android:calendarViewShown="true"
            android:focusedMonthDateColor="@color/bluedark"
            android:background="@color/green"
            android:theme="@style/CalenderViewCustom"
            android:dateTextAppearance="@style/CalenderViewDateCustomText"
            android:weekDayTextAppearance="@style/CalenderViewWeekCustomText"
            android:layout_height="320dp" />

        <!--
        <CalendarView
    android:id="@+id/calendarView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:theme="@style/CalenderViewCustom"
    android:dateTextAppearance="@style/CalenderViewDateCustomText"
    android:weekDayTextAppearance="@style/CalenderViewWeekCustomText" />
        -->

        <Button
            android:id="@+id/donebtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/datepickerdialog"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/Peach"
            android:text="Done"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <!--        <Button
                    android:id="@+id/fruits"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/headingpopup"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:backgroundTint="#FA407F"
                    android:text="Add Fruits"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
        -->


    </RelativeLayout>

</LinearLayout>